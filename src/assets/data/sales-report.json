{
  "id": "sales-report",
  "title": "Sales Report",
  "layout": "grid",
  "widgets": [
    {
      "instanceId": "sr1",
      "type": "summary-cards",
      "config": {
        "title": "Sales Overview",
        "apiUrl": "/api/data/sales-report/summary"
      }
    },
    {
      "instanceId": "sr2",
      "type": "pie-chart",
      "config": {
        "title": "Sales by Category",
        "apiUrl": "/api/data/sales-report/sales-by-category"
      }
    },
    {
      "instanceId": "sr3",
      "type": "data-table",
      "config": {
        "title": "Top Selling Products",
        "columns": [
          "productId",
          "name",
          "unitsSold",
          "revenue"
        ],
        "apiUrl": "/api/data/sales-report/top-selling-products"
      }
    }
  ]
}