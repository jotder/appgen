{
  "id": "user-activity",
  "title": "User Activity",
  "layout": "grid",
  "widgets": [
    {
      "instanceId": "ua1",
      "type": "stat-card",
      "config": {
        "title": "Active Users (24h)",
        "apiUrl": "/api/data/user-activity/active-users"
      }
    },
    {
      "instanceId": "ua2",
      "type": "line-chart",
      "config": {
        "title": "User Signups Over Time",
        "apiUrl": "/api/data/user-activity/signups-over-time"
      }
    },
    {
      "instanceId": "ua3",
      "type": "data-table",
      "config": {
        "title": "Latest User Actions",
        "columns": [
          "user",
          "action",
          "timestamp"
        ],
        "apiUrl": "/api/data/user-activity/latest-actions"
      }
    }
  ]
}